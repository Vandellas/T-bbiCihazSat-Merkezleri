@model TıbbiCihazSatışMerkezleri.Models.ÇalışanBilgileri

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h1>III. Çalışan Bilgileri</h1>
        <br />
        <br />
        <h2>1.	Firma Sahibi Bilgileri</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.firmasahibi.TcNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(e=>e.firmasahibi.TcNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.firmasahibi.TcNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.firmasahibi.AdıSoyadı, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(e => e.firmasahibi.AdıSoyadı, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.firmasahibi.AdıSoyadı, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Yazılı Hizmet Sözleşmesi:</label>
            <label class="Gözat">Gözat<input name="FirmaSahibiPdf" id="FirmaSahibiPdf" type="file" accept=".pdf" oninvalid="document.getElementsByClassName(this.id)[0].value = 'Lütfen Yazılı Hizmet Sözleşmenizi Yükleyin';" style="display: none;" onchange=" getid(this.id);" required></label>
            <input class="FirmaSahibiPdf" type="text" style="width:200%; border:0px;font-size:12px;" readonly />

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
